RewriteEngine On
RewriteBase /

# Block direct access to app and migrations if deployed under public_html
RewriteRule ^app/ - [F]
RewriteRule ^migrations/ - [F]

# Route all non-file requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]

